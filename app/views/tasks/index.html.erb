<div class="row container" ng-app="TaskCenter">
    <h1>Tasks</h1>
    <div class="col-md-8 col-centered" ng-controller="tasksController">
      <div class="well">
        <h3>Add a new Task</h3>
        <form ng-submit="addTask()">
          <div class="row">
            <div class="col-xs-6">
              <input type="text" ng-model="newTask.title" class="form-control" placeholder="title" />
            </div>
            <div class="col-xs-6">
              <input type="text" ng-model="newTask.body" class="form-control" placeholder="body" />
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <br />
              <input type="text" ng-model="newTask.status" class="form-control" placeholder="status" />
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 text-center">
              <br />
              <input type="Submit" value="Add Task" class="btn btn-primary" />
            </div>
          </div>
        </form>
      </div>

        <h3>Currently Tasks</h3>
        <hr />
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>title</th>
              <th>body</th>
              <th>status</th>
              <th>&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-show="!tasks.length">
              <td colspan="4">No tasks in the building.</td>
            </tr>
            <tr ng-repeat="task in tasks">
              <td>{{ task.title }}</td>
              <td>{{ task.body }}</td>
              <td>{{ task.status }}</td>
              <td><a class="btn btn-danger" ng-click="deleteTask($index)">Remove</a></td>
            </tr>
          </tbody>
        </table>
    </div>
</div>
